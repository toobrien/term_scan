                "legs": [
                    [ "0", "10", "A" ],
                    [ "+1", "+1", "B" ],
                    [ "+0", "+0", "B" ],
                    [ "+1", "+1", "A" ]
                ]
            },
            "filters": [
                { 
                    "type": "settle",
                    "mode": "stdev",
