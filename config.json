            "contract": "SM",
            "params": {
                "type": "calendar",
                "data_range": [ "2010-01-01", "2025-01-01" ],
                "result_limit": null,
                "legs": [ 
                    [ "F", "Z", "0", "1", "A" ],
                    [ "+1", "Z", "+0", "1", "B" ]
